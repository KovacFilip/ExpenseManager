
@using DB.models;

<div class="user-item">
    <div class="user-id">ID: @User.Id</div>
    <div class="user-name">Username: @User.Username</div>
</div>

<style>
    .user-item {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        display: flex;
        justify-content: left;
        align-items: center;
        background-color: #f5f5f5;
        font-size: 1.2rem;
    }

    .user-id {
        margin-right: 10px;
    }

    .user-name {
        font-size: 1.2rem;
    }
</style>

@code {
    [Parameter]
    public Person User { get; set; }
}